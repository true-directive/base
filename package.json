{
  "name": "@true-directive/base",
  "version": "1.3.0",
  "description": "The set of base classes for the TrueDirective Grid",
  "main": "./bundles/true-directive-base.umd.js",
  "scripts": {
    "test": "karma start",
    "test-ci": "karma start --singleRun --browsers ChromeHeadless",
    "clean": "rimraf dist",
    "build:umd": "webpack --mode production",
    "build:es2015": "tsc -m es2015 --outDir dist/es",
    "build:lic": "ncp LICENSE dist/LICENSE",
    "build:readme": "ncp README.md dist/README.md",
    "build:cl": "ncp CHANGELOG.md dist/CHANGELOG.md",
    "build": "npm run clean && npm run build:es2015 && npm run build:umd && npm run build:lic && npm run build:readme && npm run build:cl",
    "doc": "typedoc --out docs/ src/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/true-directive/base"
  },
  "author": "Aleksey Melnikov <m_alx@list.ru>",
  "license": "MIT",
  "module": "./es/public_api.js",
  "typings": "./es/public_api.d.ts",
  "homepage": "https://truedirective.com/",
  "devDependencies": {
    "@types/hammerjs": "^2.0.34",
    "@types/jasmine": "^2.5.51",
    "@types/node": "^8.0.53",
    "ajv": "^6.10.0",
    "awesome-typescript-loader": "^5.2.1",
    "copy-webpack-plugin": "^5.1.1",
    "istanbul-instrumenter-loader": "^3.0.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-coveralls": "^2.1.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-mocha-reporter": "^2.2.5",
    "karma-remap-coverage": "~0.1.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.3",
    "ncp": "^2.0.0",
    "source-map-loader": "^0.2.1",
    "ts-helpers": "1.1.2",
    "tslint": "^5.4.3",
    "tslint-loader": "^3.5.3",
    "typescript": "3.2.2",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "webpack": "^4.0.0",
    "webpack-cli": "^3.3.0"
